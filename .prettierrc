{
  "tabWidth": 2,
  "printWidth": 100,
  "singleQuote": true,
  "arrowParens": "always",
  "trailingComma": "none",
  "plugins": ["prettier-plugin-solidity"],
  "overrides": [
    {
      "files": "**/*.sol",
      "options": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": true,
        "singleQuote": false,
        "bracketSpacing": true,
        "explicitTypes": "always"
      }
    }
  ]
}
